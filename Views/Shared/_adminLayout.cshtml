@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Yönetim Paneli</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .custom-dropdown:hover .dropdown-menu {
            display: block;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:16%">
        <h3 class="w3-bar-item">Menü</h3>

        <div class="custom-dropdown">
            <button class="w3-bar-item w3-button dropdown-toggle" type="button" id="kullanıcılarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Kullanici Yonetimi
            </button>
            <div class="dropdown-menu" aria-labelledby="kullanıcılarDropdown">
                <a class="dropdown-item" href="/Admin/Kullanicilar/">Listele</a>
            </div>
        </div>
        <!-- /Kullanıcılar Dropdown Menü -->
        <!-- Bootstrap Dropdown Menü -->
        <div class="custom-dropdown">
            <button class="w3-bar-item w3-button dropdown-toggle" type="button" id="seferlerDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sefer Yonetimi
            </button>
            <div class="dropdown-menu" aria-labelledby="seferlerDropdown">
                <a class="dropdown-item" href="/Admin/SeferGoruntule/">Görüntüle</a>
                <a class="dropdown-item" href="/Admin/SeferEkle/">Ekle</a>
                
            </div>
        </div>
        <div class="custom-dropdown">
            <button class="w3-bar-item w3-button dropdown-toggle" type="button" id="güzergahDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Guzergah Yönetimi
            </button>
            <div class="dropdown-menu" aria-labelledby="güzergahDropdown">
                <a class="dropdown-item" href="/Admin/GuzergahEkle/">Ekle</a>
                <a class="dropdown-item" href="/Admin/GuzergahGoruntule/">Görüntüle</a>

            </div>
        </div>
        <div class="custom-dropdown">
            <button class="w3-bar-item w3-button dropdown-toggle" type="button" id="güzergahDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Bilet Yönetimi
            </button>
            <div class="dropdown-menu" aria-labelledby="güzergahDropdown">

                <a class="dropdown-item" href="/Admin/BiletGoruntule/">Görüntüle</a>

            </div>
        </div>

        <!-- /Bootstrap Dropdown Menü -->
        <div class="w3-bar-item">
            <a href="/Home/Index/" class="w3-button">E-Ucak</a>
        </div>
        <div class="w3-bar-item">
            <a href="/Home/Index/" class="w3-button">Çıkış Yap</a>
        </div>
        <div class="w3-bar-item">
            <a href="/Admin/Index/" class="w3-button">Ana Menü </a>
        </div>


    </div>

    <!-- Page Content -->
    <div style="margin-left:16%">

        <div class="w3-container w3-teal">
            <h1>Yönetim Paneli</h1>
        </div>

        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

</body>
</html>



